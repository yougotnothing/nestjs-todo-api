<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Email verification</title>
  </head>

  <style>
    @import url('https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,100..900;1,100..900&display=swap');

    body {
      margin: 0;
      padding: 0;
    }

    .wrapper {
      display: flex;
      flex-direction: column;
      justify-content: center;
      height: 100vh;
      width: 100vw;
      background-color: white;
      position: relative;
      overflow: hidden;
    }

    main {
      text-align: center;
      align-self: center;
      & > h1 {
        font-size: 5.3rem;
        font-family: 'Jost', sans-serif;
        font-weight: 700;
        color: black;
        opacity: 0.8;
        margin: 20px 0;
        z-index: 2;
      }

      & > h3 {
        font-size: 2.2rem;
        font-family: 'Jost', sans-serif;
        font-weight: 400;
        color: black;
        opacity: 0.9;
        margin: 10px 0;
        z-index: 2;
      }
    }

    footer {
      text-align: center;
      position: relative;
      bottom: -25vh;

      & > p {
        font-size: 1.3rem;
        font-family: 'Jost', sans-serif;
        font-weight: 400;
        color: black;
        opacity: 0.9;
        margin: 10px 0;
        z-index: 2;
      }
    }

    .wrapper::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(157, 157, 255, 0.147);
      filter: blur(5px);
      z-index: 3;
    }

    .shadow[class*="left"] {
      background-color: #64e;
      box-shadow: 0 0 25rem 25rem #64e;
      width: 1px;
      height: 1px;
      border-radius: 50%;
      position: absolute;
      top: -1px;
      left: -1px;
      z-index: 1;
    }

    .shadow[class*="right"] {
      background-color: #644bc7;
      box-shadow: 0 0 27rem 23rem #644bc7;
      width: 12px;
      height: 120px;
      border-radius: 50%;
      position: absolute;
      top: 40%;
      right: -12px;
      z-index: 1;
    }
  </style>

  <body>
    <div class="wrapper">
      <div class="shadow left"></div>
      <main>
        <h1>Hello, {{ user }}</h1>
        <h3>{{ message }}</h3>
      </main>
      <footer>
        <p>You can close this window,</p>
        <p>with love, Mtodo</p>
      </footer>
      <div class="shadow right"></div>
    </div>
  </body>
</html>