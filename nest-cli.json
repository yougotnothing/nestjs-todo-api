{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true,
    "assets": [
      {
        "include": "main/templates/*.hbs",
        "outDir": "dist/src"
      },
      {
        "include": "main/views/*.hbs",
        "outDir": "dist/src"
      },
      {
        "include": "public/css/*.css",
        "outDir": "dist/src"
      }
    ]
  }
}
